<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="blueColor">#1E90FF</Color>
            <Color x:Key="whiteColor">#ffffff</Color>

            <!-- Implicit styles - for all Buttons -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource blueColor}"></Setter>
                <Setter Property="TextColor" Value="White"></Setter>
            </Style>

            <!-- Explicit styles - for Buttons with Style "normalButton" -->
            <Style x:Key="normalButton"  TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource blueColor}"></Setter>
                <Setter Property="TextColor" Value="DarkRed"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>