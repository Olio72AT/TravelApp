<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelApp.MainPage" BackgroundColor="Gray">

    <!-- moved to App.xaml for global access
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="blueColor">#1E90FF</Color>
        </ResourceDictionary>
    </ContentPage.Resources>-->
    
    <StackLayout BackgroundColor="White" VerticalOptions="Center" Margin="15">
        <Entry Placeholder="Email"  x:Name="EmailEntry" Keyboard="Email" BackgroundColor="AntiqueWhite" TextColor="{StaticResource blueColor}"></Entry>
        <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" BackgroundColor="AntiqueWhite" TextColor="{StaticResource blueColor}"></Entry>
        <Button x:Name="LoginButton" Text="Login now ..." Clicked="LoginButton_Clicked"></Button>
        <!-- Replaced globally -->
        <!--BackgroundColor="{StaticResource Key=blueColor}"-->
        <!--TextColor="AntiqueWhite"-->

        <Button x:Name="TestButton" Style="{StaticResource normalButton}"  Text="Test button ..." Clicked="LoginButton_Clicked"></Button>
    </StackLayout>

</ContentPage>
